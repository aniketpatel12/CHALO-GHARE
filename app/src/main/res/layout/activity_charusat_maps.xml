<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CharusatMapsActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    >

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by: "
        android:layout_marginTop="14dp"
        android:textColor="#FFFFFF"
        />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/text1"

        android:backgroundTint="#FFFFFF"
        android:scrollbarSize="6dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/spinner1"


        android:backgroundTint="#FFFFFF" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="5dp"
        android:text="C H A R U S A T"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/desc1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/text2"
        android:text="Charotar University of Science and Technology. It consists of Engineering and Technology, Management , Computer Applications , Applied Sciences , Physiotherapy , Nursing , Pharmacy, Paramedical Sciences institutes"/>


    <fragment

        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="wrap_content"
        android:layout_height="1000dp"
        android:layout_below="@+id/desc1"
        />

</RelativeLayout>